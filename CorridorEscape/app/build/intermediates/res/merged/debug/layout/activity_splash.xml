<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#30a393" tools:context=".MainActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="600dp"
        android:layout_height="200dp"
        android:textColor="#ff964c"
        android:textStyle="bold"
        android:textSize="40dp"
        android:text="@string/splash_text"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="123dp" />

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
        android:fitsSystemWindows="true">
        <!-- android:id="@+id/">-->

        <LinearLayout android:id="@+id/fullscreen_content_controls" style="?metaButtonBarStyle"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay" android:orientation="horizontal"
            tools:ignore="UselessParent">

        </LinearLayout>

        <ImageView
            android:id="@+id/arkanoid"
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:src="@drawable/sittingcat"
            android:layout_gravity="center_horizontal|top"
            android:layout_below="@+id/fullscreen_content_controls"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

</RelativeLayout>
