<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dmu.p14148686.corridorescape.Controller.LeaderboardActivity"
    android:background="#30a393">

    <TextView android:id="@+id/fullscreen_content" android:layout_width="match_parent"
        android:layout_height="match_parent" android:keepScreenOn="true" android:textColor="#ff964c"
        android:textStyle="bold" android:textSize="50sp"
        android:text="@string/leaderboard_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:autoText="false"
        android:gravity="center|top" />

    <Button
        android:id="@+id/Button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:keepScreenOn="true"
        android:textColor="#ff964c"
        android:textStyle="bold" android:textSize="50sp" android:gravity="center"
        android:text="Ok"
        android:onClick="Close"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name 1"
        android:id="@+id/name1"
        android:layout_marginTop="100dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name 2"
        android:id="@+id/name2"
        android:layout_marginTop="150dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name 3"
        android:id="@+id/name3"
        android:layout_marginTop="200dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Score 1"
        android:id="@+id/score1"
        android:layout_alignTop="@+id/name1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Score 2"
        android:id="@+id/score2"
        android:layout_alignTop="@+id/name2"
        android:layout_alignLeft="@+id/score3"
        android:layout_alignStart="@+id/score3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Score 3"
        android:id="@+id/score3"
        android:layout_alignTop="@+id/name3"
        android:layout_alignLeft="@+id/score1"
        android:layout_alignStart="@+id/score1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter Name Here"
        android:id="@+id/NewName"
        android:layout_marginTop="300dp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="5"
        android:id="@+id/NewScore"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="312dp"/>
</RelativeLayout>